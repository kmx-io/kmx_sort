SRC_DIR="$(dirname "$0")"
BUILD_DIR="$PWD"

if [ "x$1" = "x--prefix" ]; then
    PREFIX="$2"
    shift 2
fi

echo "# gen by configure"  > configure.mk
echo "prefix  = $PREFIX"  >> configure.mk
echo "src_dir = $SRC_DIR" >> configure.mk

if [ "x$SRC_DIR" != "x." ]; then
    cp "$SRC_DIR"/Makefile ./
fi
